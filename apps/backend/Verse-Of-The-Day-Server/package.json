{
    "name": "@justindfuller/verse-of-the-day",
    "version": "1.0.0",
    "description": "Backend for verse of the day app.",
    "main": "dist/index.js",
    "repository": "git@github.com:JustinDFuller/Verse-Of-The-Day-Server.git",
    "author": "Justin Fuller <justindanielfuller@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "apicache": "^0.8.3",
        "app-root-path": "^2.0.1",
        "babel-watch": "^2.0.6",
        "bluebird": "^3.5.0",
        "body-parser": "^1.17.0",
        "bunyan": "^1.8.9",
        "compression": "^1.6.2",
        "cross-env": "^3.1.4",
        "dotenv": "^4.0.0",
        "eslint-plugin-ava": "^4.2.0",
        "express": "^4.14.1",
        "forever": "^0.15.3",
        "helmet": "^3.4.1",
        "immutable": "^3.8.1",
        "lodash": "^4.17.4",
        "lodash.get": "^4.4.2",
        "mock-require": "^2.0.1",
        "node-fetch": "^1.7.3",
        "pm2": "^2.4.2",
        "promise-compose": "^1.1.2",
        "proxyquire": "^1.7.11",
        "react-native-admob": "^1.2.0",
        "redis": "^2.7.1",
        "request": "^2.80.0",
        "request-promise": "^4.1.1"
    },
    "devDependencies": {
        "ava": "^0.18.2",
        "babel": "^6.23.0",
        "babel-cli": "^6.23.0",
        "babel-eslint": "^7.1.1",
        "babel-plugin-istanbul": "^4.0.0",
        "babel-plugin-transform-flow-strip-types": "^6.22.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-latest": "^6.22.0",
        "commitizen": "^2.9.6",
        "concurrently": "^3.3.0",
        "conventional-changelog-cli": "^1.2.0",
        "coveralls": "^2.11.16",
        "eslint": "3.15.0",
        "eslint-config-airbnb": "14.1.0",
        "eslint-plugin-flowtype": "^2.30.0",
        "eslint-plugin-import": "2.2.0",
        "eslint-plugin-jsx-a11y": "4.0.0",
        "eslint-plugin-react": "6.10.0",
        "flow-bin": "^0.40.0",
        "flow-typed": "^2.0.0",
        "husky": "^0.13.1",
        "nyc": "^10.1.2",
        "sinon": "^1.17.7"
    },
    "scripts": {
        "build": "babel src --out-dir=dist --source-maps",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
        "commit": "npm run test",
        "coverage": "open coverage/index.html",
        "debug": "cross-env NODE_ENV=development node --inspect --debug-brk dist/index.js",
        "delete": "pm2 delete Verse-Of-The-Day-Server",
        "dev": "cross-env NODE_ENV=development babel-watch src/index.js",
        "gcommit": "git-cz",
        "lint": "eslint \"src/**/*.js\" -c ./.eslintrc.js --fix",
        "logs": "pm2 logs",
        "logfile": "mkdir -p logs",
        "postinstall": "npm run thirdpartytypes && yarn run logfile",
        "prestart": "npm run build",
        "pretest": "cross-env NODE_ENV=test npm run build",
        "report": "nyc report --reporter=html --produce-source-map",
        "restart": "pm2 restart all",
        "start": "cross-env NODE_ENV=production pm2 start dist/index.js -i max --name=\"Verse-Of-The-Day-Server\"",
        "test": "cross-env NODE_ENV=test concurrently \"npm run types\" \"npm run unittests\" \"npm run lint\"",
        "thirdpartytypes": "flow-typed install",
        "types": "flow",
        "unittests": "nyc ava dist/**/*.spec.js",
        "version": "npm run changelog && git add package.json && git commit -m \"Update app version.\"",
        "prepublish": "npm run build"
    },
    "babel": {
        "presets": [
            "latest"
        ],
        "plugins": [
            "transform-flow-strip-types",
            "transform-runtime"
        ],
        "env": {
            "development": {
                "sourceMaps": "inline"
            },
            "test": {
                "plugins": [
                    "istanbul"
                ]
            }
        }
    },
    "ava": {
        "require": [
            "babel-core/register"
        ]
    },
    "nyc": {
        "include": [
            "src/**/*.js"
        ],
        "require": [
            "babel-register"
        ],
        "sourceMap": false,
        "instrument": false
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
