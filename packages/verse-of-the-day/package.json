{
    "name": "@justindfuller/verse-of-the-day",
    "version": "1.0.3",
    "description": "Backend for verse of the day app.",
    "main": "dist/index.js",
    "repository": "git@github.com:JustinDFuller/Verse-Of-The-Day-Server.git",
    "author": "Justin Fuller <justindanielfuller@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "apicache": "^1.5.2",
        "app-root-path": "^2.0.1",
        "babel-watch": "^7.0.0",
        "bluebird": "^3.5.0",
        "body-parser": "^1.17.0",
        "bunyan": "^1.8.9",
        "compression": "^1.6.2",
        "cross-env": "^5.2.1",
        "dotenv": "^8.1.0",
        "eslint-plugin-ava": "^8.0.0",
        "express": "^4.14.1",
        "forever": "^1.0.0",
        "helmet": "^3.4.1",
        "immutable": "^3.8.1",
        "lodash": "^4.17.4",
        "lodash.get": "^4.4.2",
        "mock-require": "^3.0.3",
        "node-fetch": "^2.6.0",
        "pm2": "^3.5.1",
        "promise-compose": "^1.1.2",
        "proxyquire": "^2.1.3",
        "react-native-admob": "^1.2.0",
        "redis": "^2.7.1",
        "request": "^2.80.0",
        "request-promise": "^4.1.1"
    },
    "devDependencies": {
        "ava": "^2.3.0",
        "babel": "^6.23.0",
        "babel-cli": "^6.23.0",
        "babel-eslint": "^10.0.3",
        "babel-plugin-istanbul": "^5.2.0",
        "babel-plugin-transform-flow-strip-types": "^6.22.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-latest": "^6.22.0",
        "commitizen": "^4.0.3",
        "concurrently": "^4.1.2",
        "conventional-changelog-cli": "^2.0.23",
        "coveralls": "^3.0.6",
        "eslint": "6.3.0",
        "eslint-config-airbnb": "18.0.1",
        "eslint-plugin-flowtype": "^4.2.0",
        "eslint-plugin-import": "2.18.2",
        "eslint-plugin-jsx-a11y": "6.2.3",
        "eslint-plugin-react": "7.14.3",
        "flow-bin": "^0.106.3",
        "flow-typed": "^2.0.0",
        "husky": "^3.0.5",
        "nyc": "^14.1.1",
        "sinon": "^7.4.2"
    },
    "scripts": {
        "build": "babel src --out-dir=dist --source-maps",
        "coverage": "open coverage/index.html",
        "lint": "eslint \"src/**/*.js\" -c ./.eslintrc.js --fix",
        "pretest": "cross-env NODE_ENV=test npm run build",
        "report": "nyc report --reporter=html --produce-source-map",
        "test": "nyc ava dist/**/*.spec.js",
        "prepublish": "npm run build"
    },
    "babel": {
        "presets": [
            "latest"
        ],
        "plugins": [
            "transform-flow-strip-types",
            "transform-runtime"
        ],
        "env": {
            "development": {
                "sourceMaps": "inline"
            },
            "test": {
                "plugins": [
                    "istanbul"
                ]
            }
        }
    },
    "ava": {
        "require": [
            "babel-core/register"
        ]
    },
    "nyc": {
        "include": [
            "src/**/*.js"
        ],
        "require": [
            "babel-register"
        ],
        "sourceMap": false,
        "instrument": false
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
