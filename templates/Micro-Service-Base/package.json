{
  "name": "@justindfuller/Micro-Service-Base",
  "version": "1.0.2",
  "description": "Base repo used to clone and make new micro services.",
  "main": "src/index.js",
  "repository": "git@github.com:JustinDFuller/Micro-Service-Base.git",
  "author": "Justin Fuller <justindanielfuller@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "apicache": "^1.5.2",
    "babel-watch": "^7.0.0",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "cross-env": "^5.2.1",
    "dotenv": "^8.1.0",
    "eslint-plugin-ava": "^8.0.0",
    "express": "^4.14.1",
    "forever": "^1.0.0",
    "helmet": "^3.4.1",
    "mock-require": "^3.0.3",
    "proxyquire": "^2.1.3"
  },
  "devDependencies": {
    "ava": "^2.3.0",
    "babel": "^6.23.0",
    "babel-cli": "^6.23.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-istanbul": "^5.2.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-latest": "^6.22.0",
    "commitizen": "^4.0.3",
    "concurrently": "^4.1.2",
    "conventional-changelog-cli": "^2.0.23",
    "coveralls": "^3.0.6",
    "eslint": "6.3.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-plugin-flowtype": "^4.2.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.14.3",
    "flow-bin": "^0.106.3",
    "flow-typed": "^2.0.0",
    "husky": "^3.0.5",
    "nodemon": "^1.11.0",
    "nyc": "^14.1.1",
    "sinon": "^7.4.2"
  },
  "scripts": {
    "types": "flow",
    "thirdpartytypes": "flow-typed install",
    "unittests": "nyc ava dist/**/*.spec.js",
    "report": "nyc report --reporter=html --produce-source-map",
    "test": "cross-env NODE_ENV=test concurrently \"npm run types\" \"npm run unittests\" \"npm run lint\"",
    "lint": "eslint \"src/**/*.js\" -c ./.eslintrc.js --fix",
    "build": "babel src --out-dir=dist --source-maps",
    "gcommit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "version": "npm run changelog && git add package.json && git commit -m \"Update app version.\"",
    "commit": "npm run test",
    "postinstall": "npm run thirdpartytypes",
    "dev": "cross-env NODE_ENV=development babel-watch src/index.js",
    "prestart": "npm run build",
    "pretest": "cross-env NODE_ENV=test npm run build",
    "start": "cross-env NODE_ENV=production forever dist/src/index.js",
    "precommit": "npm run test"
  },
  "babel": {
    "presets": [
      "latest"
    ],
    "plugins": [
      "transform-flow-strip-types",
      "transform-runtime"
    ],
    "env": {
      "development": {
        "sourceMaps": "inline"
      },
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "ava": {
    "require": [
      "babel-core/register"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
